<div class="details-image-container">
  <img class="pokemon-image" src="{{img}}">
</div>

<h2>{{name}}</h2>
<p>Weight: {{weight}}</p>
<p>Height: {{height}}</p>

{{#if editable}}
<form method="GET" action="/pokemons/{{id}}/edit">
  <button type="submit">Edit Pokemon</button>
</form>
<form method="POST" action="/pokemons/{{id}}?_method=DELETE">
  <button class="negative-button" type="submit">Delete Pokemon</button>
</form>
{{/if}}

<form method="GET" action="/">
  <button type="submit">Back to Pokedex</button>
</form>