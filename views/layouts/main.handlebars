<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Mominder</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

  <link rel="stylesheet" type="text/css" href="/css/styles.css">

</head>
<body>
  <nav>
    <div class="container">
      <div class="nav-wrapper">

        <a href="/" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <a href="/" class="brand-logo left nav__overwrite">Mominder</a>
        <ul class="right hide-on-med-and-down">
          <li class><a href="/">Home</a></li>
          {{#if user }}
          <li><a href="/alerts/create">Alerts</a></li>
          <li><a href="#">Profile</a></li>
          <li><a href="/users/logout">Logout</a></li>
          {{else}}
          <li><a href="/users/create">Sign Up</a></li>
          <li><a href="/users/login">Login</a></li>
          {{/if}}
        </ul>

        {{!-- mobile --}}
        <ul class="sidenav" id="mobile-demo">
          <li><a href="/">Home</a></li>
          {{#if user }}
          <li><a href="/alerts/create">Alerts</a></li>
          <li><a href="/alerts/create">Profile</a></li>
          <li><a href="/users/logout">Logout</a></li>
          {{else}}
          <li><a href="/users/create">Sign Up</a></li>
          <li><a href="/users/login">Login</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>

  {{#if success_msg}}
  <div class="alerts_success">{{success_msg}}</div>
  {{/if}}

  {{#if success}}
  <div class="alerts_success">{{success}}</div>
  {{/if}}

  {{#if error_msg}}
  <div class="alerts_error">{{error_msg}}</div>
  {{/if}}

  {{#each errors}}
  <div class="alerts_error">
    {{this.msg}}
  </div>
  {{/each}}

  {{#if error}}
  <div class="alerts_error">{{error}}</div>
  {{/if}}
  {{!-- {{#if error}}
  <div class="alert alert-danger">{{error}}</div>
  {{/if}} --}}
  <script
  src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
  integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
  crossorigin="anonymous"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  {{{ body }}}
  <script src="/js/main.js"></script>
</body>
</html>
